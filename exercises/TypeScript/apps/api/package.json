{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "prod": "node dist/main --max-old-space-size=200",
    "db:migration-create": "mikro-orm migration:create",
    "db:test": "mikro-orm migration:fresh",
    "format": "prettier --write ./**/*.{ts,tsx}",
    "jscpd": "jscpd --config jscpd.json .",
    "knip": "knip",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --output-file eslint_report.json --format json src",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/cli-config.ts",
      "./dist/cli-config.js"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "5.7.13",
    "@mikro-orm/migrations": "5.7.13",
    "@mikro-orm/nestjs": "5.2.0",
    "@mikro-orm/postgresql": "5.7.13",
    "@mikro-orm/reflection": "5.7.13",
    "@mikro-orm/seeder": "5.7.13",
    "@nestjs/cli": "10.1.8",
    "@nestjs/common": "10.0.5",
    "@nestjs/core": "10.0.5",
    "@nestjs/platform-express": "10.0.5",
    "@nestjs/platform-ws": "10.0.5",
    "@nestjs/throttler": "5.0.0",
    "@nestjs/websockets": "10.0.5",
    "@sentry/node": "7.74.0",
    "@sentry/tracing": "7.58.1",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/uuid": "9.0.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "helmet": "7.0.0",
    "inquirer": "9.2.8",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "5.7.13",
    "@nestjs/testing": "10.0.5",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.2",
    "@types/supertest": "2.0.12",
    "eslint": "8.45.0",
    "eslint-config-custom": "1.0.0",
    "jest": "29.6.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsconfig-custom": "1.0.0",
    "types-custom": "1.0.0",
    "typescript": "5.1.6"
  }
}
